// BUSCAR UM ITEM
const selecionaVeiculo = (vaga) => {
  console.log(base.find((veiculo)=>{return veiculo.parkingSpace === vaga}))
} 
//selecionaVeiculo(6)


// CRIAR UM ITEM
const create = (data) => {
  console.log("antes", base)
  base.push(data)
  console.log("depois", base)
}

