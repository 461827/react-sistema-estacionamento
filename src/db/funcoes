// REMOVER UM ITEM
const removeItem = (vaga) => {
  let alvo = base.findIndex((item) => {
    return item.parkingSpace === vaga 
  })

  console.log("antes", base)
  
  base.splice(alvo,1);

  console.log("depois", base)
}
//removeItem(6)

 // ALTERAR UM ITEM VERSAO 2
const updateItemV2 = (data) => {
  let alvo = base.findIndex((item) => {
    return item.parkingSpace === data.parkingSpace  
  })
  
  if(alvo === -1){
    console.log("nao encontrado")
    return
  }
 
  console.log("antes", base)
  
  base.splice(alvo, 1);

  base.push(data)
 
  console.log("depois", base)
}

